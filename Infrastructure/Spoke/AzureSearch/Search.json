{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "variables": {
    "aSearchApiVersion": "2021-04-01-preview",
    "aSearchNameTidy": "[toLower(trim(parameters('aSearchName')))]",

    "tags": {
      "provider": "b51535c2-ab3e-4a68-95f8-e2e3c9a19299"
    }
  },
  "parameters": {
    "deploymentId": {
      "type": "string",
      "defaultValue": "[resourceGroup().name]"
    },
    "location": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "[resourceGroup().location]"
    },
    "sitecoreSKU": {
      "type": "string",
      "allowedValues": [ "Extra Small", "Small", "Medium", "Large", "Extra Large", "2x Large", "3x Large" ],
      "defaultValue": "Small",
      "metadata": {
        "description": "Sitecore SKU controls the sizes and service levels of the provisioned resources"
      }
    },

    "aSearchName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "[concat(parameters('deploymentId'), '-azureSearch')]"
    },

    "skuMap": {
      "type": "secureObject",
      "defaultValue": {
        "Extra Small": {
          "azureSearch": {
            "SkuName": "basic",
            "ReplicaCount": 1,
            "PartitionCount": 1,
            "HostingMode": "Default"
          }
        },
        "Small": {
          "azureSearch": {
            "SkuName": "basic",
            "ReplicaCount": 1,
            "PartitionCount": 1,
            "HostingMode": "Default"
          }
        },
        "Medium": {
          "azureSearch": {
            "SkuName": "basic",
            "ReplicaCount": 2,
            "PartitionCount": 1,
            "HostingMode": "Default"
          }
        },
        "Large": {
          "azureSearch": {
            "SkuName": "standard",
            "ReplicaCount": 4,
            "PartitionCount": 1,
            "HostingMode": "Default"
          }
        },
        "Extra Large": {
          "azureSearch": {
            "SkuName": "standard",
            "ReplicaCount": 4,
            "PartitionCount": 2,
            "HostingMode": "Default"
          }
        },
        "2x Large": {
          "azureSearch": {
            "SkuName": "standard2",
            "ReplicaCount": 6,
            "PartitionCount": 2,
            "HostingMode": "highDensity"
          }
        },
        "3x Large": {
          "azureSearch": {
            "SkuName": "standard3",
            "ReplicaCount": 8,
            "PartitionCount": 3,
            "HostingMode": "highDensity"
          }
        }
      }
    },
    "resourceSizes": {
      "type": "object",
      "defaultValue": "[parameters('skuMap')[parameters('sitecoreSKU')]]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Search/searchServices",
      "name": "[variables('aSearchNameTidy')]",
      "apiVersion": "[variables('aSearchApiVersion')]",
      "location": "[parameters('location')]",
      "sku": {
                "name": "[parameters('resourceSizes').azureSearch.SkuName]"
      },
      "properties": {
        "replicaCount": "[parameters('resourceSizes').azureSearch.ReplicaCount]",
        "partitionCount": "[parameters('resourceSizes').azureSearch.PartitionCount]",
        "hostingMode": "[parameters('resourceSizes').azureSearch.HostingMode]",
        "publicNetworkAccess": "Enabled",
        "networkRuleSet": {
          "ipRules": [],
          "bypass": "None"
        },
        "encryptionWithCmk": {
          "enforcement": "Unspecified"
        },
        "disableLocalAuth": false,
        "authOptions": {
          "apiKeyOnly": {}
        },
        "disabledDataExfiltrationOptions": [],
        "semanticSearch": "disabled"
      },
      "tags": {
        "provider": "[variables('tags').provider]"
      }
    }
  ]
}
